@page "/"
@inherits LayoutComponentBase
@using YumeNailBar.Domain.AggregateModels.CustomerAggregate.ValueObjects
<h3 xmlns="http://www.w3.org/1999/html">Customer</h3>

<div>
    <EditForm class="form-vertical py-5" Model="@CustomerModel" OnValidSubmit="@HandleValidInput">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <InputText class="form-control" @bind-Value="@CustomerModel.Name"></InputText>
        </div>
        <div class="mb-3">
            <label class="form-label">PhoneNumber</label>
            <InputText class="form-control" @bind-Value="@CustomerModel.PhoneNumber"></InputText>
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <InputText class="form-control" @bind-Value="@CustomerModel.Email"></InputText>
        </div>
        <div class="mb-3">
            <label class="form-label">Comment</label>
            <InputText class="form-control" @bind-Value="@CustomerModel.Comment"></InputText>
        </div>
        <div class="mb-3">
            <label class="form-label">Procedure</label>
            <InputSelect class="form-control" TValue="@ProcedureKind" @bind-Value="@CustomerModel.ProcedureKind">
                @foreach (var Item in Enum.GetValues(typeof(ProcedureKind)))
                {
                    <option value="@Item">@Item</option>
                    
                }
                
            </InputSelect>
            
            
        </div>
        <ul>
            @foreach (var p in @CustomerModel.Procedures)
            {
                <li>@p.ProcedureKind</li>
            }
        </ul>
        <div class="mb-3">
            <label class="form-label">Date</label>
            <InputDate class="form-control" TValue="@DateTime" @bind-Value="@CustomerModel.Date"></InputDate>
        </div>
        <br>
        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </EditForm>
</div>

